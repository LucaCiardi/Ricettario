@model Ricettario.Models.Ricetta

@{
    ViewData["Title"] = "Aggiungi Ricetta";
    Layout = "_Layout";
}

<div class="form-container">
    <h2>Aggiungi Nuova Ricetta</h2>

    <form action="@Url.Action("Aggiungi", "Ricetta")" method="post">
        @Html.AntiForgeryToken()
        <div class="validation-summary-errors text-danger">
            @Html.ValidationSummary(true)
        </div>

        <div class="form-group">
            <label for="Nome">Nome della ricetta:</label>
            <input type="text" id="Nome" name="Nome" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Categoria">Categoria:</label>
            <select id="Categoria" name="Categoria" class="form-control" required>
                <option value="">Seleziona categoria</option>
                <option value="Antipasto">Antipasto</option>
                <option value="Primo">Primo</option>
                <option value="Secondo">Secondo</option>
                <option value="Contorno">Contorno</option>
                <option value="Dessert">Dessert</option>
            </select>
            @Html.ValidationMessageFor(m => m.Categoria, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="TipoCucina">Tipo di cucina:</label>
            <input type="text" id="TipoCucina" name="TipoCucina" class="form-control" />
            @Html.ValidationMessageFor(m => m.TipoCucina, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="TempoPreparazione">Tempo di preparazione (minuti):</label>
            <input type="number" id="TempoPreparazione" name="TempoPreparazione"
                   class="form-control" min="1" max="480" required />
            @Html.ValidationMessageFor(m => m.TempoPreparazione, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Ingredienti">Ingredienti:</label>
            <textarea id="Ingredienti" name="Ingredienti" class="form-control" rows="10"
                      placeholder="Inserisci ogni ingrediente su una nuova riga" required></textarea>
            @Html.ValidationMessageFor(m => m.Ingredienti, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Istruzioni">Istruzioni:</label>
            <textarea id="Istruzioni" name="Istruzioni" class="form-control" rows="10"
                      placeholder="Inserisci ogni passaggio su una nuova riga" required></textarea>
            @Html.ValidationMessageFor(m => m.Istruzioni, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Difficolta">Difficoltà:</label>
            <select id="Difficolta" name="Difficolta" class="form-control">
                <option value="">Seleziona difficoltà</option>
                <option value="Facile">Facile</option>
                <option value="Media">Media</option>
                <option value="Difficile">Difficile</option>
            </select>
            @Html.ValidationMessageFor(m => m.Difficolta, "", new { @class = "text-danger" })
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-primary">Salva</button>
            <a href="@Url.Action("Elenco", "Ricetta")" class="btn btn-secondary">Annulla</a>
        </div>
    </form>
</div>
