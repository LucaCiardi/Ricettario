@using Entities
@model Ricetta
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <title>Dettagli Ricetta</title>
    <link rel="stylesheet" href="~/css/ricette/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <h1>Ricettario Web</h1>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Elenco", "Ricetta")">Ricette</a></li>
                <li><a href="@Url.Action("Index", "Home")#about">Chi Siamo</a></li>
                <li><a href="@Url.Action("Index", "Home")#contact">Contatti</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h1>@Model.Nome</h1>
        <div class="detail-container">
            <div class="detail-row">
                <p><strong>Nome:</strong> @Model.Nome</p>
                <button class="edit-btn" data-field="Nome" data-id="@Model.Id">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </div>
            <div class="detail-row">
                <p><strong>Categoria:</strong> @Model.Categoria</p>
                <button class="edit-btn" data-field="Categoria" data-id="@Model.Id">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </div>
            <div class="detail-row">
                <p><strong>Tipo di Cucina:</strong> @Model.TipoCucina</p>
                <button class="edit-btn" data-field="TipoCucina" data-id="@Model.Id">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </div>
            <div class="detail-row">
                <p><strong>Tempo di Preparazione:</strong> @Model.TempoPreparazione minuti</p>
                <button class="edit-btn" data-field="TempoPreparazione" data-id="@Model.Id">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </div>
            <div class="detail-row">
                <p><strong>Difficoltà:</strong> @Model.Difficolta</p>
                <button class="edit-btn" data-field="Difficolta" data-id="@Model.Id">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </div>
            <div class="detail-row ingredients">
                <div>
                    <strong>Ingredienti:</strong>
                    <pre>@Model.Ingredienti</pre>
                </div>
                <button class="edit-btn" data-field="Ingredienti" data-id="@Model.Id">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </div>
            <div class="detail-row instructions">
                <div>
                    <strong>Istruzioni:</strong>
                    <pre>@Model.Istruzioni</pre>
                </div>
                <button class="edit-btn" data-field="Istruzioni" data-id="@Model.Id">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </div>
        </div>
        <a href="@Url.Action("Elenco", "Ricetta")" class="back-link">Torna all'elenco</a>
    </main>
    <footer>
        <p>&copy; 2025 Ricettario Web</p>
    </footer>
    <script src="~/js/ricette/edit.js"></script>
</body>
</html>
